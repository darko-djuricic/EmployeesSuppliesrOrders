@{
    var title = ViewData["Title"] as string??String.Empty;
    string link= title.ToLower();
    
                
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - PABP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Drugi_projekat.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Alegreya Sans SC' rel='stylesheet'>
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="https://www.viser.edu.rs/images/zaposleni/darkodj.jpg" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a asp-controller="Home" asp-action="Index" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">PABP</span> </a>
                <div class="nav_list">
                    <a asp-controller="Employees" asp-action="Index" class="nav_link @(link.Contains("employee")?"active-nav":String.Empty)"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Employees</span> </a> 
                    <a asp-controller="Orders" asp-action="Index" class="nav_link @(link.Contains("order")?"active-nav":String.Empty)"> <i class='bx bx-package h5' ></i> <span class="nav_name">Orders</span> </a>   
                    <a asp-controller="Other" asp-action="Index" class="nav_link @(link.Contains("product")?"active-nav":String.Empty)">
                        <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Product dashboard</span>     
                    </a>   
                </div>
            </div> <a asp-controller="Home" asp-action="SingOut" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="p-5">
        <div class="container">
            @RenderBody()
        </div>
        <footer class="border-top footer text-muted text-center mt-5 position-relative pt-3">
            <div class="container">
                @{
                    int year =  DateOnly.FromDateTime(DateTime.Now).Year;
                }
                &copy; <cache expires-on="new DateTime(year+1, 1, 1)">@year</cache> - PABP drugi projekat - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
